@model MyProject.Areas.Admin.Models.News
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_UserLayout.cshtml";
}

<div class="Panel-Header">
    حذف
</div>
<h3>آیا از حذف اطلاعات مطمئن هستید؟</h3>
<div class="Panel-Body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewsDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewsDesc)
